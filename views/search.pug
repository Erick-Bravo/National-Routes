extends layout

block content
    div.search-container
        h1= title
        if (!parks && !states)
            p We couldn't find anything
        else
            if (states)
                div.states-list
                    h2 States:
                    each state in states
                        a(href=`/search/state/${state.id}`) #{state.name}
            if (parks)
                div.park-list
                    h2 Parks:
                    each park in parks
                        div(id=`park-${park.id}` class='park-list-item')
                            a(href=`/parks/${park.id}`)
                                img(src=`/img/park-${park.id}.png` alt=`${park.name}` class=`park-image-${park.id}`)
